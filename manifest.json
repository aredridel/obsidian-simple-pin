{

  "manifest_version": 3,
  "name": "Obsidian Simple Pin",
  "description": "Adds links to your Obsidian daily notes",
  "version": "1.5",

  "browser_specific_settings": {
    "gecko": {
      "id": "obsidian-simple-pin@dinhe.net",
      "strict_min_version": "109.0"
    }
  },

  "icons": {
    "48": "push-pin.svg",
    "96": "push-pin.svg"
  },

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "page_action": {
    "browser_style": true,
    "show_matches": ["*://*/*"],
    "default_icon": {
      "32": "push-pin.svg",
      "16": "push-pin.svg"
    },
    "default_title": "Pin"
  },

  "background": {
    "scripts": ["background.js"]
  }

}
